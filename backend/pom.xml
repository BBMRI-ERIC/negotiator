    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.bbmri_eric</groupId>
    <artifactId>negotiator</artifactId>
    <name>BBMRI-ERIC Negotiator</name>
    <version>unknown</version>
    <packaging>jar</packaging>
    <description>
        An open-source access negotiation tool for research infrastructures.
    </description>
    <parent>
        <artifactId>spring-boot-starter-parent</artifactId>
        <groupId>org.springframework.boot</groupId>
        <version>3.4.1</version>
    </parent>
    <properties>
        <java.version>17</java.version>
        <spring-security.version>6.2.0</spring-security.version>
        <spring-boot.version>${project.parent.version}</spring-boot.version>
        <spring.version>6.2.1</spring.version>
        <flyway.version>11.1.0</flyway.version>
        <testcontainers.version>1.20.4</testcontainers.version>
        <spring.state-machine.version>4.0.0</spring.state-machine.version>
    </properties>
    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/BBMRI-ERIC/negotiator</url>
        </repository>
    </distributionManagement>
    <build>
        <finalName>negotiator</finalName>
        <plugins>

            <plugin>
                <artifactId>fmt-maven-plugin</artifactId>
                <groupId>com.spotify.fmt</groupId>
                <version>2.25</version>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/unit/**</include>
                    </includes>
                </configuration>
                <groupId>org.apache.maven.plugins</groupId>
                <version>3.5.2</version>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <includes>
                                <include>**/integration/**</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <id>integration-tests</id>
                    </execution>
                </executions>
                <groupId>org.apache.maven.plugins</groupId>
                <version>3.5.2</version>
            </plugin>
            <plugin>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <classifier>spring-boot</classifier>
                            <mainClass>eu.bbmri_eric.negotiator.NegotiatorApplication</mainClass>
                        </configuration>
                        <goals>
                            <goal>repackage</goal>
                            <goal>build-info</goal>
                        </goals>
                    </execution>
                </executions>
                <groupId>org.springframework.boot</groupId>
                <version>3.4.1</version>
            </plugin>
            <plugin>
                <artifactId>jacoco-maven-plugin</artifactId>
                <groupId>org.jacoco</groupId>
                <version>0.8.12</version>
                <configuration>
                    <excludes>
                        <exclude>eu/bbmri_eric/negotiator/common/**</exclude>
                        <exclude>eu/bbmri_eric/negotiator/NegotiatorApplication.class</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <goals>
                            <goal>report</goal>
                        </goals>
                        <id>report</id>
                        <phase>test</phase>
                    </execution>
                    <execution>
                        <goals>
                            <goal>report</goal>
                        </goals>
                        <id>reportIntegration</id>
                        <phase>verify</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
